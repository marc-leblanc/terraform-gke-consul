global:
  name: consul
  image: "consul:1.14.5"
  enabled: true
  datacenter: ${datacenter}
  federation:
    enabled: ${federation}
    createFederationSecret: ${federation}
  gossipEncryption:
    autoGenerate: true
  tls:
    enabled: true
    enableAutoEncrypt: true
    verify: true
  acls:
    manageSystemACLs: ${manageSystemACLs}
    createReplicationToken:  ${manageSystemACLs}
server:
  replicas: ${replicas}
  bootstrapExpect: ${replicas}
  securityContext:
    runAsNonRoot: false
    runAsUser: 0
  acls:
    manageSystemACLs:  ${manageSystemACLs}
connectInject:
  enabled: true
syncCatalog:
  enabled: false
controller:
  enabled: true
ui:
  service:
    type: 'LoadBalancer'
meshGateway:
  enabled: ${meshgateway}
  replicas: 1
metrics:
  enabled: ${prometheus_enable}
  enableAgentMetrics: ${prometheus_agent_metrics}
  agentMetricsRetentionTime: 1m
  enableGatewayMetrics: true
ingressGateways:
  enabled: ${ingressgateways}
  defaults:
    replicas: 2
    service:
      type: ${ingressgateways_svc}
prometheus:
  enabled: ${prometheus_demo_enable}
